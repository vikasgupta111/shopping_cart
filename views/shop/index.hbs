<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-md-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>



{{# each products }}
<div class="row">
    {{# each this }}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{ this.imagePath}}" alt="..." class="img-responsive">
            <div class="caption">
                <p class="description">{{this.description}}</p>
                <div class="clearfix">
                    <div class="price pull-left">â‚¹{{this.price}}</div>
                    <a href="/add-to-cart/{{this.id}}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}
    